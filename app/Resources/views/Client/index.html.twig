{% extends 'base.html.twig' %}

    {% block title %}Enregistrer un client{% endblock %}


{% block body %}

<div class="container">
    <h2>Liste Client</h2>
        <div class="row">
            <div class="col-ms-12"> 
                <table class="table table-striped" id="liste_client">
                    <thead>
                        <tr>
                            <th>Numero client</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Telephone</th>
                            <th>Email</th>
                            <th>Provenance</th>
                            <th>Adresse</th>
                            <th>Code postal</th>
                            <th>Ville</th>
                            <th>Note</th>
                        </tr>
                    </thead>
            </div>
        </div>

                <tbody>
                    {% for client in clients | sort %}
                        <tr>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.id }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.nom }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.prenom }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.telephone }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.email }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.provenance }}</a></td>            
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.adresse }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.codePostal }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.ville }}</a></td>
                            <td><a href="{{ path('fiche_client_show', { 'id': client.id }) }}">{{ client.note }}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
</div>
{% endblock %}
