{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <form method="POST" action="{{ path('fiche_client_new')}}">
        <div class="row">
            <div class="col-md-6 col-md-4">
                <label for="nom">NOM :</label>
                <input type="text" placeholder="Nom" class="form-control" id="nom">
            </div>
        
            <div class="col-md-6 col-md-4">
                <label for="prenom">PRENOM :</label>
                <input type="text" placeholder="Prenom" class="form-control" id="prenom">
            </div>
        
            <div class="col-md-6 col-md-4">
                <label for="provenance">PROVENANCE :</label>
                <select type="text" class="form-control" id="provenance">
                    <option>WEB</option>
                    <option>PROSPECTION</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <label for="adrs">ADRESSE :</label>
                <input type="text" placeholder="Adresse" class="form-control" id="adrs">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-4">
                <label for="cp">CODE POSTAL :</label>
                <input type="text" placeholder="Code Postal" class="form-control" id="cp">
            </div>
        
            <div class="col-md-6 col-md-4">
                <label for="ville">VILLE :</label>
                <input type="text" placeholder="Ville" class="form-control" id="ville">
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 col-md-4">
                <label for="telephone">TELEPHONE :</label>
                <input type="text" placeholder="NÂ° de Telephone" class="form-control" id="telephone">
            </div>
        
            <div class="col-md-6 col-md-4">
                <label for="email">EMAIL :</label>
                <input type="text" placeholder="Email" class="form-control" id="email">
            </div>
        </div>
        <div class="row, push">
            <div class="col-md-8">
                <label for="note">NOTE :</label>
                <textarea class="form-control" rows='10'></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-md-offset-9">
                <input type="submit" value="Enregistrer client" class="btn btn-success btn-block" />
                <a href="{{ path('fiche_client_index') }}" class="btn btn-warning btn-block">Retour</a>
            </div>
        </div>  
    </form>
</div>
    
{% endblock %}
