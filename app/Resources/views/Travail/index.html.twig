{% extends 'base.html.twig' %}

{% block body %}
    
<div class="container">
    <h2>Liste des Chantier</h2>
        <div class="row">
            <table class="table table-bordered" id="liste_chantier">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Date debut</th>
                        <th>Date rappel</th>
                        <th>Mode paiment</th>
                        <th>Lieux</th>
                        <th>Garantie</th>
                        <th>Devis</th>
                        <th>Process verbal</th>
                        <th>Facture</th>
                        
                    </tr>
                </thead>
                
                <tbody>
                {% for travail in travails %}
                    <tr>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.id }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.titre }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.description }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.prix }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{% if travail.dateDebut %}{{ travail.dateDebut|date('Y-m-d') }}{% endif %}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{% if travail.dateRappel %}{{ travail.dateRappel|date('Y-m-d') }}{% endif %}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.modePaiment }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.lieux }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.garantie }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.devis }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.processVerbal }}</a></td>
                        <td><a href="{{ path('fiche_chantier_show', { 'id': travail.id }) }}">{{ travail.facture }}</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
</div>

{% endblock %}
